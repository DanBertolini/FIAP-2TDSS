<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/imgProduto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@android:drawable/sym_def_app_icon" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgProduto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dp">
            <TextView
                android:id="@+id/lblInfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 1" />
            <TextView
                android:id="@+id/info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 1"
                android:layout_toEndOf="@id/lblInfo1"
                android:layout_marginStart="40dp"/>
            <TextView
                android:id="@+id/lblInfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 2"
                android:layout_marginTop="50dp"
                android:layout_below="@id/lblInfo1"/>
            <TextView
                android:id="@+id/info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 2"
                android:layout_marginTop="50dp"
                android:layout_below="@id/lblInfo1"
                android:layout_toEndOf="@id/lblInfo2"
                android:layout_marginStart="40dp"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>