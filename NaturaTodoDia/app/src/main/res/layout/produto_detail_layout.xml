<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/imgProduto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@android:drawable/sym_def_app_icon" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgProduto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dp">
            <TextView
                android:id="@+id/lblNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome" />
            <TextView
                android:id="@+id/txtNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 1"
                android:layout_marginEnd="100dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/lblTipoProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:layout_marginTop="50dp"
                android:layout_below="@id/lblNome"/>
            <TextView
                android:id="@+id/txtTipoProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 2"
                android:layout_marginTop="50dp"
                android:layout_below="@id/txtNome"
                android:layout_marginEnd="100dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/lblCores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cores"
                android:layout_marginTop="50dp"
                android:layout_below="@id/lblTipoProd"/>
            <TextView
                android:id="@+id/txtCores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 3"
                android:layout_marginTop="50dp"
                android:layout_below="@id/txtTipoProd"
                android:layout_marginEnd="100dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/lblTom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tonalidade"
                android:layout_marginTop="50dp"
                android:layout_below="@id/lblCores"/>
            <TextView
                android:id="@+id/txtTom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 4"
                android:layout_marginTop="50dp"
                android:layout_below="@id/txtCores"
                android:layout_marginEnd="100dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/lblFPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtro Protetor Solar"
                android:layout_marginTop="50dp"
                android:layout_below="@id/lblTom"/>
            <TextView
                android:id="@+id/txtFPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 5"
                android:layout_marginTop="50dp"
                android:layout_below="@id/txtTom"
                android:layout_marginEnd="100dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/lblBrilho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Possui Brilho"
                android:layout_marginTop="50dp"
                android:layout_below="@id/lblFPS"/>
            <TextView
                android:id="@+id/txtBrilho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 6"
                android:layout_marginTop="50dp"
                android:layout_below="@id/txtFPS"
                android:layout_marginEnd="100dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/lblLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link"
                android:layout_marginTop="50dp"
                android:layout_below="@id/lblBrilho"/>
            <TextView
                android:id="@+id/txtLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 7"
                android:layout_marginTop="50dp"
                android:layout_below="@id/txtBrilho"
                android:layout_marginEnd="100dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/lblPreco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link"
                android:layout_marginTop="50dp"
                android:layout_below="@id/lblBrilho"/>
            <TextView
                android:id="@+id/txtPreco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 7"
                android:layout_marginTop="50dp"
                android:layout_below="@id/txtBrilho"
                android:layout_marginEnd="100dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/lblDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link"
                android:layout_marginTop="50dp"
                android:layout_below="@id/lblPreco"/>
            <TextView
                android:id="@+id/txtDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info 7"
                android:layout_marginTop="50dp"
                android:layout_below="@id/txtPreco"
                android:layout_marginEnd="100dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>